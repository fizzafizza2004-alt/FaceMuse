<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ResultActivity">

    <!-- Gradient Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/button_gradient_background"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analysis Complete"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here's what we found about your skin"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- Main Content Scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Face Map Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="16dp">
                <ImageView
                    android:id="@+id/ivResult"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Face map visualization with highlighted areas"
                    android:layout_gravity="bottom|center_horizontal"
                    android:padding="8dp"/>
            </androidx.cardview.widget.CardView>

            <!-- Analysis Items -->
            <LinearLayout
                android:id="@+id/llAnalysisItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"/>

             <!-- Disclaimer -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="#E7F3FE"
                android:drawableStart="@android:drawable/ic_menu_info_details"
                android:drawablePadding="12dp"
                android:padding="12dp"
                android:text="This analysis provides guidance only and is not medical advice. Consult a dermatologist for concerns."
                android:textColor="@color/textSubheading" />

            <!-- Action Buttons -->
            <Button
                android:id="@+id/btnRoutine"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_gradient_background"
                android:text="View Personalized Routine"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnAskQuestions"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/outline_button_background"
                android:text="Ask Questions"
                android:textColor="@color/textHeading" />

            <TextView
                android:id="@+id/tvViewHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="View Analysis History"
                android:textColor="@color/textLink" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>