<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8F7"
    android:padding="24dp"
    tools:context=".FeedbackActivity">

    <!-- Back Button -->
    <TextView
        android:id="@+id/tvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@android:drawable/ic_media_previous"
        android:gravity="center_vertical"
        android:text=" Back"
        android:textColor="@color/textSubheading" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Share Your Feedback"
        android:textColor="@color/textHeading"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="We'd love to hear what you think!"
        android:textColor="@color/textSubheading"
        android:textSize="16sp" />

    <!-- Feedback Input -->
    <EditText
        android:id="@+id/etFeedback"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tvSubtitle"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_text_background"
        android:gravity="top"
        android:hint="Tell us about your experience..."
        android:padding="20dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmitFeedback"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_gradient_background"
        android:text="Submit Feedback"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAllCaps="false" />

</RelativeLayout>