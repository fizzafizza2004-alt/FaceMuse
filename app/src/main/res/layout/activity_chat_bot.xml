<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ChatBotActivity">

    <!-- Gradient Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chatbot_header_background"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@android:drawable/ic_media_previous"
            android:gravity="center_vertical"
            android:text=" Back"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Skincare Assistant"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask me anything about your routine"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- Chat Messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llInput"
        android:layout_below="@+id/header"
        android:padding="8dp" />

    <!-- Quick Questions (Initially Visible) -->
    <LinearLayout
        android:id="@+id/llQuickQuestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llInput"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:text="Quick questions:"
            android:textColor="@color/textSubheading" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <TextView style="@style/QuickQuestionButton" android:id="@+id/q1" android:text="Explain my results" />
            <TextView style="@style/QuickQuestionButton" android:id="@+id/q2" android:text="Beginner routine tips" />
            <TextView style="@style/QuickQuestionButton" android:id="@+id/q3" android:text="Is my data safe?" />
            <TextView style="@style/QuickQuestionButton" android:id="@+id/q4" android:text="Product recommendations" />

        </GridLayout>
    </LinearLayout>

    <!-- Message Input Area -->
    <LinearLayout
        android:id="@+id/llInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="12dp">

        <EditText
            android:id="@+id/etPrompt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:hint="Type your question..."
            android:padding="16dp" />

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_gradient_background"
            android:src="@android:drawable/ic_menu_send" />
    </LinearLayout>

</RelativeLayout>