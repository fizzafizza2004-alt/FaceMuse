<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp"
    tools:context=".SignupActivity">

    <!-- Main Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Create Account"
        android:textColor="@color/textHeading"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Join thousands who trust their skin journey with us"
        android:textColor="@color/textSubheading"
        android:textSize="16sp" />

    <!-- Name Field -->
    <TextView
        android:id="@+id/tvNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSubtitle"
        android:layout_marginTop="32dp"
        android:text="Name"
        android:textColor="@color/textHeading"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/tvNameLabel"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:drawableStart="@android:drawable/ic_menu_my_calendar"
        android:drawablePadding="12dp"
        android:hint="Your name"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />

    <!-- Email Field -->
    <TextView
        android:id="@+id/tvEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etName"
        android:layout_marginTop="16dp"
        android:text="Email"
        android:textColor="@color/textHeading"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/tvEmailLabel"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:drawableStart="@android:drawable/ic_dialog_email"
        android:drawablePadding="12dp"
        android:hint="your@email.com"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />

    <!-- Password Field -->
    <TextView
        android:id="@+id/tvPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEmail"
        android:layout_marginTop="16dp"
        android:text="Password"
        android:textColor="@color/textHeading"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etPass"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/tvPasswordLabel"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:drawableStart="@android:drawable/ic_lock_lock"
        android:drawablePadding="12dp"
        android:hint="Create a password"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />

    <!-- Confirm Password Field -->
    <TextView
        android:id="@+id/tvConfirmPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPass"
        android:layout_marginTop="16dp"
        android:text="Confirm Password"
        android:textColor="@color/textHeading"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etConfirmPass"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/tvConfirmPasswordLabel"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:drawableStart="@android:drawable/ic_lock_lock"
        android:drawablePadding="12dp"
        android:hint="Confirm your password"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />

    <!-- Privacy Disclaimer -->
    <TextView
        android:id="@+id/tvPrivacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etConfirmPass"
        android:layout_marginTop="24dp"
        android:background="#E7F3FE"
        android:drawableStart="@android:drawable/ic_secure"
        android:drawablePadding="12dp"
        android:padding="12dp"
        android:text="Your privacy is protected. FaceMue provides guidance only and is not a substitute for medical advice."
        android:textColor="@color/textSubheading" />

    <!-- Create Account Button -->
    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tvPrivacy"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_gradient_background"
        android:text="Create Account"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAllCaps="false" />

    <!-- Login Link -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textColor="@color/textSubheading"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvLoginLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textColor="@color/textLink"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>