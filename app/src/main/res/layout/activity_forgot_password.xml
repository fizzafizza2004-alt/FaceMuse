<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp"
    tools:context=".ForgotPasswordActivity">

    <!-- Back to Login Link -->
    <TextView
        android:id="@+id/tvBackToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@android:drawable/ic_media_previous"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:text="Back to login"
        android:textColor="@color/textSubheading"
        android:textSize="16sp" />

    <!-- Icon -->
    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tvBackToLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="#E7F3FE"
        android:padding="20dp"
        android:src="@android:drawable/ic_dialog_email" />

    <!-- Main Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Forgot Password?"
        android:textColor="@color/textHeading"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="We'll help you get back safely."
        android:textColor="@color/textSubheading"
        android:textSize="16sp" />

    <!-- Email Field -->
    <TextView
        android:id="@+id/tvEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSubtitle"
        android:layout_marginTop="40dp"
        android:text="Email"
        android:textColor="@color/textHeading"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/tvEmailLabel"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:hint="your@email.com"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />

    <TextView
        android:id="@+id/tvHelperText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEmail"
        android:layout_marginTop="8dp"
        android:text="Enter the email associated with your account"
        android:textColor="@color/textSubheading"
        android:textSize="12sp" />

    <!-- Send Reset Link Button -->
    <Button
        android:id="@+id/btnSendResetLink"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tvHelperText"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_gradient_background"
        android:text="Send Reset Link"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAllCaps="false" />

</RelativeLayout>