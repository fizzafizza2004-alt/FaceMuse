<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8F7"
    tools:context=".RoutineActivity">

    <!-- Gradient Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_gradient_background"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@android:drawable/ic_media_previous"
            android:gravity="center_vertical"
            android:text=" Back to results"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Your Personalized Routine"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tailored guidance based on your skin analysis"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- Main Content Scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Morning/Night Toggle -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/tab_unselected_background"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tabMorning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tab_selected_background"
                    android:drawableStart="@android:drawable/ic_menu_my_calendar" 
                    android:drawablePadding="8dp"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Morning"
                    android:textColor="@color/textHeading" />

                <TextView
                    android:id="@+id/tabNight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@android:drawable/ic_menu_myplaces"
                    android:drawablePadding="8dp"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Night"
                    android:textColor="@color/textSubheading" />
            </LinearLayout>

            <!-- Routine Steps Container -->
            <LinearLayout
                android:id="@+id/llRoutineSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical" />

            <!-- Beginner Tips Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#E7F3FE"
                app:cardCornerRadius="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Beginner Tips" 
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="- Start slowly - introduce new products one at a time\n- Be patient - skin changes take 4-6 weeks to show\n- Listen to your skin - if something irritates, stop using it" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <!-- Disclaimer -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:drawableStart="@android:drawable/ic_menu_info_details"
                android:drawablePadding="8dp"
                android:text="This routine is educational guidance and not medical advice. Consult a dermatologist for specific concerns."
                android:textColor="@color/textSubheading" />

            <!-- Action Buttons -->
            <Button
                android:id="@+id/btnAskChatbot"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/outline_button_background"
                android:text="Have Questions? Ask Our Chatbot"
                android:textColor="@color/textHeading" />

            <TextView
                android:id="@+id/tvShareFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="Share your feedback"
                android:textColor="@color/textLink" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>